{
    "root": true,
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "mocha": true
    },
    "plugins": [
        "no-only-tests"
    ],
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", 4],
        "no-only-tests/no-only-tests": "error",
        "object-shorthand": ["error"]
    },
    "globals": {
        "cy": true,
        "expect": true,
        "Cypress": true
    }
}
